compress
create
weekly
rotate <%=@retention%>
<% if @operatingsystem == "Ubuntu" -%>su root syslog
<% end -%>
include <%=@conf_dir%>

/var/log/wtmp
{
    missingok
    monthly
    create 0664 root utmp
    rotate 1
}

/var/log/btmp
{
    missingok
    monthly
    create 0660 root utmp
    rotate 1
}
