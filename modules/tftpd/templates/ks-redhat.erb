#!/bin/bash
exec </dev/tty8 >/dev/tty8
chvt 8
echo "network --bootproto=dhcp --hostname=pxe.localdomain --noipv6" >/tmp/pre_network

<% if @server %>VLAN_VMS=4
echo "%packages --nobase" >/tmp/pre_packages
