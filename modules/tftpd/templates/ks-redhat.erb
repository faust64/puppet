EOF
fi

<% else -%>    echo "%packages" >/tmp/pre_packages
    cat <<EOF >>/tmp/pre_packages
xfce
EOF
<% end -%>cat <<EOF >>/tmp/pre_packages
acpid
bash-completion
bind-utils
bridge-utils
redhat-release
cronie-anacron
crontabs
