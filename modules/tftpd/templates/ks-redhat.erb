<% if @rhelvers == 6 -%>if grep '^#OPENVZ y' /tmp/pre_morerepo; then
    DEFAULTFS=ext3
    VIRTROOT=/vz
    VIRTNAME=vz
el<% else -%><% end -%>if grep '^#KVM y' /tmp/pre_morerepo; then
