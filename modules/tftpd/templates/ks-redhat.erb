    cat <<EOF >>/tmp/pre_disk
<% if @rhelvers == 6 -%>logvol /home --fstype=$DEFAULTFS --name=home --vgname=data --size=1 --grow --percent=90
<% else -%>logvol /home --fstype=$DEFAULTFS --name=home --vgname=data --size=1 --grow --maxsize=1000000000
<% end -%>EOF
