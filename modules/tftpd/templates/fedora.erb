menu background boot-screens/splash.png
include boot-screens/stdmenu.cfg
menu hshift 19
menu width 40
menu margin 0

menu title Fedora Systems
    menu title Fedora Systems
	menu label Fedora Systems
	menu exit
<% @distribs.each do |dist| -%><% [ "Server" ].each do |family| -%><% [ "x86_64" ].each do |arch| -%>    label -
	menu label <%=dist%> <%=arch%> (<%=family%>)
	kernel installers/fedora<%=dist%>/<%=family%>/<%=arch%>/linux
	append initrd=installers/fedora<%=dist%>/<%=family%>/<%=arch%>/initrd.img inst.repo=http://dl.fedoraproject.org/pub/fedora/linux/releases/<%=dist%>/Server/<%=arch%>/os/
<% end -%><% end -%><% end -%>
menu end
