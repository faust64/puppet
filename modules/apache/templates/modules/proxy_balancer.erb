<IfModule mod_proxy_balancer.c>
    <IfModule mod_status.c>
	<Location /balancer-manager>
	    SetHandler balancer-manager
<% if @version == "2.2" -%>	    Order deny,allow
	    Deny from all
	    Allow from 127.0.0.1
	    Satisfy all
<% else -%>    	    Require local
<% end -%>	</Location>
    </IfModule>
</IfModule>
