user = <%=@runtime_user%>
group = <%=@runtime_group%>
log_type = file
log_file = /var/log/pnp4nagios/npcd.log
max_logfile_size = 10485760
log_level = 0
perfdata_spool_dir = <%=@spool_dir%>/npcd/
perfdata_file_run_cmd = <%=@lib_dir%>/libexec/process_perfdata.pl
perfdata_file_run_cmd_args = --bulk
identify_npcd = 1
npcd_max_threads = 5
sleep_time = 15
load_threshold = 6.0
pid_file=/var/run/npcd.pid
perfdata_file = <%=@spool_dir%>/nagios/perfdata.dump
perfdata_spool_filename = perfdata
perfdata_file_processing_interval = 15
#pro-tip: if you don't leave either a commented or an empty line here
#you would end up with an error like the following, and npcd refusing to start
#An Error occured while reading your config on line XXX Message was: "NULL value"
