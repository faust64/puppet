<% if @rsyslog_version >= 7 -%>input(type="imfile"
      File="/var/log/php-fpm/<%=@name%>.access.log"
      statefile="/var/log/php-fpm/.<%=@name%>.access.log"
      Tag="fpm-<%=@name%>: "
      Severity="info"
      Facility="local7")

input(type="imfile"
      File="/var/log/php-fpm/<%=@name%>.slow.log"
      statefile="/var/log/php-fpm/.<%=@name%>.slow.log"
      Tag="fpm-slow-<%=@name%>: "
      Severity="info"
      Facility="local7")
<% else -%>$InputFileName /var/log/php-fpm/<%=@name%>.access.log
$InputFileTag fpm-<%=@name%>:
$InputFileStateFile fpm-<%=@name%>
$InputFileSeverity info
$InputFileFacility local7
$InputRunFileMonitor

$InputFileName /var/log/php-fpm/<%=@name%>.slow.log
$InputFileTag fpm-slow-<%=@name%>:
$InputFileStateFile fpm-slow-<%=@name%>
$InputFileSeverity info
$InputFileFacility local7
$InputRunFileMonitor
<% end -%>
