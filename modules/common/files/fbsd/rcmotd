#!/bin/sh
#
# $FreeBSD: stable/10/etc/rc.d/motd 197947 2009-10-10 22:17:03Z dougb $
#

# PROVIDE: motd
# REQUIRE: mountcritremote
# BEFORE:  LOGIN

. /etc/rc.subr

name="motd"
rcvar="update_motd"
start_cmd="motd_start"
stop_cmd=":"

PERMS="644"

motd_start()
{
	#	Update kernel info in /etc/motd
	#	Must be done *before* interactive logins are possible
	#	to prevent possible race conditions.
	#
	check_startmsgs && echo -n 'Updating motd:'
	if [ ! -f /etc/motd ]; then
		install -c -o root -g wheel -m ${PERMS} /dev/null /etc/motd
	fi

	if [ ! -w /etc/motd ]; then
		echo ' /etc/motd is not writable, update failed.'
		return
	fi

	T=`mktemp -t motd`
	echo "`uname -o` `uname -r` `uname -m`" >${T}
	echo "Puppet-managed system - don't touch anything you're not supposed to" >> ${T}

	cmp -s $T /etc/motd || {
		cp $T /etc/motd
		chmod ${PERMS} /etc/motd
	}
	rm -f $T

	check_startmsgs && echo '.'
}

load_rc_config $name
run_rc_command "$1"
