<% end -%><% if @operatingsystem == "Debian" or @myoperatingsystem == "Devuan" or @operatingsystem == "Ubuntu" -%>auth		optional	pam_faildelay.so delay=3000000
auth		[success=ok new_authtok_reqd=ok ignore=ignore user_unknown=bad default=die] pam_securetty.so
